<form action="register" method="POST">
    <div class="form-group">
        <label for="username">Please Enter a Username</label>
        <input type="username" class="form-control" id="username-field" placeholder="Username" name="username">
    </div>
    <div class="form-group">
        <label for="password">Please Enter a Password</label>
        <input type="password" class="form-control" id="password-field" placeholder="Password" name="password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>