<!DOCTYPE html>
<html lang='en'>
    <head>
        <title>Jupiter</title>
        <%- include('../partials/bootstrap') %>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script src="/js/login.js"></script>
        <script src="/js/register.js"></script>
        <script src="/js/addCard.js"></script>
    </head>
    <body>
        <%- include('../partials/nav') %>
        <div class="container">
            <% if (page === "register") { %>
                <%- include('../partials/registerForm') %>
            <% } else { %>
                <div class="container mt-4">
                    <%- include('../partials/add-card') %>
                    <% if (messages.includes("invplace")) { %>
                        <p>No Results Found :(</p>
                    <% } %>
                </div>
            <% } %>
        </div>
        <div class="card-deck" id="weather_deck">
            <% for (var i = 0; i < cards.length; i++) { %>
                <div class="card">
                    <div class="card-header">
                        <h1><%= cards[i].title %></h1>
                    </div>
                    <div class="card-body">
                        <p><%= cards[i].currentTemp %> F</p>
                        <p><%= cards[i].conditions %></p>
                    </div>
                </div>
            <% } %>
        </div>
    </body>
</html>
